<h1>Admin Shelters</h1>

<div id='all-shelters'>
  <% @shelters.each do |shelter| %>
    <h3><%= link_to shelter.name, "/shelters/#{shelter.id}" %></h3>
    <p>Created at: <%= shelter.created_at %></p>
  <% end %>
</div>

<h2>Shelters with Pending Applications:</h2>
<div id='pending-apps'>
  <% @pending_shelters.each do |shelter| %>
    <h3><%= link_to shelter.name, "/shelters/#{shelter.id}" %></h3>
    <p>Created at: <%= shelter.created_at %></p>
  <% end %>
</div>
